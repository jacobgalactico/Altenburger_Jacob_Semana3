import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
    Scanner scanner = new Scanner(System.in);
        System.out.println("Introduzca el tiempo que hace: ");
        float tiempo = scanner.nextFloat();
        if (tiempo >= 2){
            System.out.println("El tiempo que hace es: "+tiempo+" grados");
        }
            else {
                System.out.println("Riesgo de hielo");
            System.out.println("Con una temperatura de: "+tiempo+" grados");
            }
    }
}
